		"id": "MANA_CORE_SENSATION_BAD",
		"//": "A random chance every 12 hours to signify that you are over the impurity soft cap",
		"recurrence": "12 hours",
		"condition": { "and": [ { "not": {"u_has_bionics": "ANY" } }, { "not": { "u_has_effect": "sleep" } }, { "math": [ "u_val('vitamin', 'name: impurities')>=u_impurities_soft_cap" ]  }, { "x_in_y_chance": { "x": 1, "y": 3 } } ] },
