	{
		"type": "effect_on_condition",
		"id": "MANA_CORE_SENSATION_GOOD",
		"//": "A random chance every 6 hours to signify that a breakthrough would succeed",
		"recurrence": "6 hours",
		"condition": { "and": [ { "not": {"u_has_bionics": "ANY" } }, { "not": { "u_has_effect": "sleep" } }, { "math": [ "(u_val('vitamin', 'name: impurities')<=u_manacoretier*50)" ]  }, { "x_in_y_chance": { "x": 1, "y": 3 } } ] },
