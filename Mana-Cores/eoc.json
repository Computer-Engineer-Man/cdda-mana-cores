		"condition": { "and": [ { "not": {"u_has_bionics": "ANY" } }, { "not": { "u_has_effect": "sleep" } }, { "math": [ "u_val('vitamin', 'name: impurities')>=u_impurities_soft_cap*2" ]  }, { "x_in_y_chance": { "x": 1, "y": 3 } } ] },
		"effect":
